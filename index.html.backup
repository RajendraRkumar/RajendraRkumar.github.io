  <script>
    document.getElementById('y').textContent = new Date().getFullYear();
    const pages = document.querySelectorAll('.page');
    const dots = document.querySelectorAll('.dot');
    let current = 0;
    let isAnimating = false;

    function updateDots() {
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === current);
      });
    }

    function showPage(idx) {
      if (isAnimating || idx === current) return;
      isAnimating = true;
      
      const prevPage = pages[current];
      const nextPage = pages[idx];
      
      // Reset all pages
      pages.forEach((p, i) => {
        p.classList.remove('active', 'turned');
        p.classList.add('inactive');
        if (i < idx) {
          p.classList.add('turned');
        }
      });
      
      // Show current page
      nextPage.classList.remove('inactive', 'turned');
      nextPage.classList.add('active');
      
      current = idx;
      updateDots();
      
      setTimeout(() => {
        isAnimating = false;
      }, 1000);
    }

    // Navigation buttons
    document.querySelector('.nav-btn.next').onclick = function() {
      if (current < pages.length - 1) showPage(current + 1);
    };
    document.querySelector('.nav-btn.prev').onclick = function() {
      if (current > 0) showPage(current - 1);
    };

    // Dot navigation
    dots.forEach((dot, i) => {
      dot.addEventListener('click', () => showPage(i));
    });

    // Keyboard navigation
    document.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
        e.preventDefault();
        document.querySelector('.nav-btn.next').click();
      }
      if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
        e.preventDefault();
        document.querySelector('.nav-btn.prev').click();
      }
    });

    // Scroll-based navigation
    let scrollTimeout;
    document.addEventListener('wheel', function(e) {
      e.preventDefault();
      
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(() => {
        if (e.deltaY > 0 && current < pages.length - 1) {
          // Scroll down - next page
          showPage(current + 1);
        } else if (e.deltaY < 0 && current > 0) {
          // Scroll up - previous page
          showPage(current - 1);
        }
      }, 150);
    }, { passive: false });

    // Touch swipe navigation
    let startX = null, startY = null;
    document.querySelector('.book').addEventListener('touchstart', function(e) {
      startX = e.touches[0].clientX;
      startY = e.touches[0].clientY;
    });
    
    document.querySelector('.book').addEventListener('touchend', function(e) {
      if (startX !== null && startY !== null) {
        let endX = e.changedTouches[0].clientX;
        let endY = e.changedTouches[0].clientY;
        let deltaX = endX - startX;
        let deltaY = endY - startY;
        
        // Determine if it's a horizontal or vertical swipe
        if (Math.abs(deltaX) > Math.abs(deltaY)) {
          // Horizontal swipe
          if (deltaX > 60) document.querySelector('.nav-btn.prev').click();
          if (deltaX < -60) document.querySelector('.nav-btn.next').click();
        } else {
          // Vertical swipe
          if (deltaY < -60) document.querySelector('.nav-btn.next').click();
          if (deltaY > 60) document.querySelector('.nav-btn.prev').click();
        }
        
        startX = null;
        startY = null;
      }
    });

    // Initialize
    updateDots();
  </script>
